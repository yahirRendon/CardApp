<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BD4C0"
    android:padding="@dimen/medium"
    tools:context="com.example.android.cardapp.MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_name"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/xLarge"
        android:paddingHorizontal="@dimen/medium"
        android:text="@string/app_title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/xlarge_text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/to_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/from_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/large"
        android:backgroundTint="@color/colorWhite"
        android:hint="To"
        android:inputType="textCapWords"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"/>

    <EditText
        android:id="@+id/from_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/colorWhite"
        android:hint="From"
        android:inputType="textCapWords"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"/>

    <Button
        android:id="@+id/submit_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/large"
        android:backgroundTint="@color/colorWhite"
        android:onClick="launchActivityTwo"
        android:text="Create"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
